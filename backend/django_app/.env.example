# JurChat Django Configuration
# Copy this file to .env and configure your settings

# Security
SECRET_KEY=your-super-secret-django-key-here-make-it-long-and-random
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Debug
DEBUG=True

# Database Configuration
# For local development, you can use SQLite (default)
# For production, use PostgreSQL
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
# Uncomment below for PostgreSQL
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=jurchat
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432

# Redis Configuration (optional, falls back to local cache)
REDIS_URL=redis://localhost:6379/0

# File Storage
# For local development
MEDIA_ROOT=/path/to/media/files
MEDIA_URL=/media/

# For production with AWS S3 (optional)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=us-east-1

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# FastAPI Integration
FASTAPI_URL=http://127.0.0.1:8001
